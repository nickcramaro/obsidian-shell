		"electron-rebuild": "^3.2.9",
		"obsidian": "^1.5.7",
		"typescript": "^5.3.0",
		"tslib": "^2.6.0"
	},
	"dependencies": {
		"@xterm/xterm": "^5.5.0",
		"@xterm/addon-fit": "^0.10.0",
		"@xterm/addon-web-links": "^0.11.0",
		"node-pty": "^1.0.0"
