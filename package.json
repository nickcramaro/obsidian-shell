	"description": "Embedded Claude Code terminal for Obsidian",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "node esbuild.config.mjs production",
		"rebuild-pty": "electron-rebuild -f -w node-pty -v 37.10.2",
